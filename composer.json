{
	"name": "stolz/laravel-html-tidy",
	"description": "HTML Tidy middleware for Laravel",
	"keywords": ["htmltidy", "laravel", "htmlpurifier", "html", "html5", "tidy", "filter", "middleware", "indent", "markup", "purifier", "beautifier"],
	"authors": [
		{
			"name": "Stolz",
			"homepage": "https://github.com/Stolz/laravel-html-tidy",
			"role": "developer"
		}
	],
	"require": {
		"php": ">=5.4",
		"ext-tidy": "*",
                "laravel/helpers": "^1.2",
		"illuminate/support": "^5|^6|^7",
		"illuminate/http": "^5|^6|^7"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "2.*"
	},
	"autoload": {
		"psr-4": {
			"Stolz\\HtmlTidy\\": "src/"
		}
	},
	"config": {
		"discard-changes": true,
		"optimize-autoloader": true,
		"preferred-install": "dist"
	},
	"license": "MIT",
	"extra": {
		"laravel": {
			"providers": [
				"Stolz\\HtmlTidy\\ServiceProvider"
			]
		}
	}
}
